{{#each posts as |post|}}

<div class="container-fluid">
    <div class="=row">
        <div class="container postContainer">
            <div class="row justify-content-center">
                <div class="col-9">
                    <h2>
                        <a href="/post/{{post.id}}">{{post.title}}</a>
                    </h2>
                </div>
        
                <div class="col-3">
                    <p>Written by {{post.user.username}}</p>
                    <p>Created on {{post.created_at}}</p>
                </div>

            </div>
        </div>
    </div>
</div>
{{/each}}