<div class="card">
    <div class="card-header">
        Register
    </div>
    <div class="card-body">
        <form id="register-section">
            <div class="form-group">
                <label for="username-register"> Register using an email or username!</label>
                <input type="text" class="form-control" id="username-register">
            </div>
            <div class="form-group">
                <label for="password-register"> Enter your desired password</label>
                <input type="password" class="form-control" id="password-register">
            </div>
            <button type="submit" class="btn btn-info"> Confirm Registration!</button>
        </form>
    </div>

    <script src="/js/register.js"></script>